<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/harfler5"
    android:orientation="vertical"
    tools:context="com.example.furkanpc.myfinalproject.MainActivity2">

    <TextView
        android:textStyle="bold|italic"
        android:fontFamily="cursive"
        android:textColor="#DCDCDC"
        android:text="Furkan'ın Kendi Sözlügü"
        android:gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorAccent"/>


    <LinearLayout
        android:id="@+id/innerLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/et2"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Bir kelime giriniz..."
            android:textSize="20sp"
            android:background="@drawable/border2"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/btnSearch2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/border2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/search"
            android:scaleType="fitCenter"
            android:padding="10dp"
            />

        <Button
            android:text="Alıntı Sözlüğüme Git"
            android:id="@+id/btnGoOtherActivity2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/border2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:fontFamily="cursive"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/myFrameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


</LinearLayout>
